doctype
html
    head
        title 电影详情
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0")
        link(href="https://res.wx.qq.com/open/libs/weui/0.4.3/weui.min.css" rel="stylesheet")
        style.
            .hd {
                padding: 2em 0;
            }
            .page_title {
                text-align: center;
                font-size: 30px;
                color: #3cc51f;
                font-weight: 400;
                margin: 0 15%;
            }
    body
        .page_title
            .hd
                h1.page_title= movie.title
            .bd
                .weui_cells_title 电影介绍
                .weui_cells
                    .weui_cell
                        .weui_cell_bd.weui_cell_primary
                            p 电影名字
                        .weui_cell_ft= movie.title
                    .weui_cell
                        .weui_cell_bd.weui_cell_primary
                            p 导演
                        .weui_cell_ft= movie.doctor
                    .weui_cell
                        .weui_cell_bd.weui_cell_primary
                            p 国家
                        .weui_cell_ft= movie.country
                    .weui_cell
                        .weui_cell_bd.weui_cell_primary
                            p 语言
                        .weui_cell_ft= movie.language
                    .weui_cell
                        .weui_cell_bd.weui_cell_primary
                            p 年份
                        .weui_cell_ft= movie.year
                .weui_cells
                    section
                        img(src="#{movie.poster}", style="width=100%")
                .weui_articles
                    section
                        p= movie.summary
