extend ../layout

block content
    .container
        .row
            .panel.panel-default
                .panel-heading
                    h3 搜索词：#{keyword}
                .panel-body
                    if movies && movies.length > 0
                        each item in movies
                            .col-md-3
                                .thumbnail
                                    a(href="/movie/detail/#{item._id}")
                                        img(src="#{item.poster}", alt="#{item.title}")
                                    .caption
                                        h3 #{item.title}
                                        p
                                            a.btn.btn-primary(href="/movie/detail/#{item._id}", role="button") 观看详情  
                    else
                        p 没有找到相关内容      
            ul.pagination
                - for (var i = 0; i < totalPage; i++) {
                    - if (currentPage === i + 1) {
                        li.active
                            span #{currentPage}
                    - } else {
                        li
                            a(href='/category/result?#{query}&page=#{i}') #{i + 1}
                    - }
                - }                       